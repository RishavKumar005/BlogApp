<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rishav.learn.com.blogapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="rishav.learn.com.blogapp.activity.ForgotPasswordActivity"></activity>
        <activity
            android:name="rishav.learn.com.blogapp.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="rishav.learn.com.blogapp.activity.MainActivity" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="rishav.learn.com.blogapp.activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name="rishav.learn.com.blogapp.activity.RegisterActivity" />
        <activity android:name="rishav.learn.com.blogapp.activity.SetupActivity" />
        <activity
            android:name="rishav.learn.com.blogapp.activity.NewPostActivity"
            android:parentActivityName="rishav.learn.com.blogapp.activity.MainActivity" />
        <activity android:name="rishav.learn.com.blogapp.activity.CommentsActivity" />
    </application>

</manifest>